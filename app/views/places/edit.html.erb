<h1>This is the edit page</h1>

<%= form_with scope: :place, model: @place, local: true do |form| %>

    <p>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
    </p>

    <p>
        <%= form.label :description %><br>
        <%= form.text_field :description %>
    </p>

    <p>
        <%= form.label :address %><br>
        <!-- input type is needed for places api -->
        <input type="text" name="place[address]" id="autocomplete">
    </p>

    <p>
        <%= form.label :image %><br>
        <%= form.text_field :img_url %>
    </p>

    <p>
        <%= form.label :rating %><br>
        <%= form.number_field :rating, :min => 0, :max => 5 %>
    </p>

    <p>
      <%= form.submit %>
    </p>
  <% end %>

  <%= link_to 'back', places_path %>