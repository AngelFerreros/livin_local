<h1 class = "text-center">This is the edit page</h1>


<div id= "editForm" class = "container">
    <div class="form-row">
        <div class="col">
            <%= form_with scope: :place, model: @place, local: true do |form| %>
             <%= form.label :name %><br>
            <%= form.text_field :name %>
        </div>
        <div class="col">
            <%= form.label :address %><br>
            <!-- input type is needed for places api -->
            <input type="text" name="place[address]" id="autocomplete">
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <%= form.label :description %><br>
            <%= form.text_field :description %>
        </div>
        <div class="col">
            <%= form.label :review %><br>
            <!-- input type is a workaround for the activerecord  -->
            <input type="text" name="place[review]" id="place_review">
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <%= form.label :image %><br>
            <%= form.text_field :img_url %>
        </div>
        <div class="col">
            <%= form.label :rating %><br>
            <%= form.number_field :rating, :min => 0, :max => 5 %>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <%= link_to 'back', place_path %>
        </div>
        <div class="col">
            <%= form.submit %>
            <% end %>
        </div>
    </div>
</div>



