<%if current_user.admin == true%>
<h1 class="text-center">Hello admin, <%= current_user[:username] %>!</h1>
<%else%>
<h1 class="text-center">Welcome back, <%= current_user[:username] %>! 👋🏼</h1>
<%end%>

    <!-- filter by tags -->
<div class="dropdown" id = "filter">
    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Filter By </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <%@tags.each do |t| %>
        <a class="dropdown-item"><%=t.name%></a>
    <% end %>
      </div>
</div>


<div id="card-container" class="row d-flex justify-content-around p-4 text-center">
<div class="card-columns">

    <% @places.each do |place| %>
        <a href="/places/<%= place.id %>">
            <div class="card bg-transparent text-white">
                <img class="card-img" src<%= cl_image_tag(place.img_url) %>>
                <div class="card-img-overlay">
                    <h5 class="card-title d-flex"><%=place.name%></h5>
                    <%# <p class="card-text">Created by: </p>
                    <%# <p class="card-text">Last updated 3 mins ago</p> %>
                </div>
            </div>
        </a>
    <% end %>
</div>
</div>




